generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  githubId  Int      @unique
  name      String
  email     String
  avatar    String
  createdAt DateTime @default(now())
  Meal      Meal[]
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime
  hour        Int
  isOnDiet    Boolean
  sessionId   String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
