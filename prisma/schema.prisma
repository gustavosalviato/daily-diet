generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  githubId      Int?     @unique
  name          String
  email         String   @unique
  avatar        String?
  createdAt     DateTime @default(now())
  sequenceCount Int
  Meal          Meal[]
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime
  hour        Int
  isOnDiet    Boolean

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
